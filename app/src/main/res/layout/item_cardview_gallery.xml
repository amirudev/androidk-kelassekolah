<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="300px"
            android:layout_height="match_parent"
            tools:src="@tools:sample/avatars"
            android:scaleType="centerCrop"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15px"
            android:paddingVertical="10dp">
            
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                tools:text="Kegiatan Ramadhan 2022"/>
            
            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                tools:text="16 Juli 2022"/>
            
            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer pharetra mauris sed tortor placerat, vitae tempor justo dictum. In sollicitudin massa et turpis dapibus ornare."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/ic_baseline_people_24_gray"
                    android:layout_marginRight="15px"/>
                
                <TextView
                    android:id="@+id/tv_item_participant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Siswa Siswi XI RPL 2 SMKN 1 GUNUNGPUTRI" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/ic_baseline_favorite_24_gray"
                    android:layout_marginRight="15px"/>

                <TextView
                    android:id="@+id/tv_item_likes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Disukai 15 Orang" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_favorite_24_white"
                    android:text="Like"
                    android:layout_marginHorizontal="6dp"/>

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_share_24_white"
                    android:layout_marginHorizontal="6dp"
                    android:text="Share"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_view_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="View Detail" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>